# TRACE HERB - FREE Hosting Environment Variables

# Application Settings
NODE_ENV=production
PORT=3000

# FREE Hosting Configuration
HOSTING_MODE=free
BLOCKCHAIN_MODE=simulated

# API Configuration (FREE)
API_BASE_URL=https://trace-herb-backend.railway.app
CORS_ORIGIN=*

# Frontend URLs (FREE)
FARMER_PORTAL_URL=https://trace-herb-farmer.vercel.app
CONSUMER_PORTAL_URL=https://trace-herb-consumer.netlify.app
PROCESSOR_PORTAL_URL=https://username.github.io/trace-herb-processor
LAB_PORTAL_URL=https://username.github.io/trace-herb-lab
REGULATOR_PORTAL_URL=https://username.github.io/trace-herb-regulator
STAKEHOLDER_PORTAL_URL=https://username.github.io/trace-herb-stakeholder
MANAGEMENT_PORTAL_URL=https://username.github.io/trace-herb-management
SUPPLY_CHAIN_PORTAL_URL=https://username.github.io/trace-herb-supply-chain

# FREE Database (MongoDB Atlas)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/traceherb

# FREE File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security (Generate new keys for production)
JWT_SECRET=free-hosting-jwt-secret-change-this
SESSION_SECRET=free-hosting-session-secret-change-this

# File Upload (Optimized for free tiers)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/tmp/uploads

# Logging (Minimal for free tiers)
LOG_LEVEL=warn
LOG_FILE=/tmp/logs/app.log

# FREE Tier Optimizations
CACHE_ENABLED=true
COMPRESSION_ENABLED=true
STATIC_CACHE_TTL=86400
API_RATE_LIMIT=100

# Optional FREE Services
# SMS (Twilio Free Trial)
SMS_API_KEY=your-twilio-api-key
SMS_SENDER_ID=TRACEHERB

# Email (Gmail Free)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (Google Analytics Free)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error Tracking (Sentry Free)
SENTRY_DSN=your-sentry-dsn
