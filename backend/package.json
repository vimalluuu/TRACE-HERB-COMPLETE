{
  "name": "trace-herb-backend",
  "version": "1.0.0",
  "description": "Backend API services for TRACE HERB blockchain traceability system",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "mocha test/**/*.js --timeout 10000",
    "test:integration": "mocha test/integration/**/*.js --timeout 30000",
    "test:unit": "mocha test/unit/**/*.js --timeout 5000",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o docs/swagger.json",
    "clean": "rm -rf logs/* temp/*"
  },
  "keywords": [
    "blockchain",
    "traceability",
    "ayurveda",
    "supply-chain",
    "hyperledger-fabric",
    "rest-api"
