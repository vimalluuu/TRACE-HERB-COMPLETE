# TRACE HERB Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Blockchain Network Configuration
FABRIC_NETWORK_NAME=trace-herb-network
FABRIC_CHANNEL_NAME=herb-channel
FABRIC_CHAINCODE_NAME=herb-traceability
FABRIC_MSP_ID=Org1MSP
FABRIC_PEER_ENDPOINT=localhost:7051
FABRIC_ORDERER_ENDPOINT=localhost:7050
FABRIC_CA_ENDPOINT=localhost:7054

# Database Configuration
COUCHDB_HOST=localhost
COUCHDB_PORT=5984
COUCHDB_USERNAME=admin
COUCHDB_PASSWORD=password
COUCHDB_DATABASE=trace_herb

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SMS_GATEWAY_API_KEY=your-sms-gateway-api-key
WEATHER_API_KEY=your-weather-api-key

# File Storage
IPFS_HOST=localhost
IPFS_PORT=5001
UPLOAD_MAX_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@traceherb.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Blockchain Wallet Configuration
WALLET_PATH=./wallet
ADMIN_USER_ID=admin
ADMIN_USER_SECRET=adminpw

# Smart Contract Configuration
CONTRACT_TIMEOUT=30000
DISCOVERY_ENABLED=true
DISCOVERY_AS_LOCALHOST=true

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# External Integrations
ERP_SYSTEM_ENDPOINT=https://api.erp-system.com
LIMS_SYSTEM_ENDPOINT=https://api.lims-system.com
REGULATORY_API_ENDPOINT=https://api.regulatory-system.gov.in

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
PUSH_NOTIFICATION_KEY=your-push-notification-key
OFFLINE_SYNC_INTERVAL=300000

# Development Settings
DEBUG_MODE=true
MOCK_GPS_DATA=false
MOCK_SENSOR_DATA=false
ENABLE_SWAGGER=true
